{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                {{ form(form) }}

                <div class="errors">
                    {% for error in errors %}
                        <div class="alert alert-danger">{{ error }}</div>
                    {% endfor %}
                </div>

                {% if success %}
                    <div class="success">
                        <div class="alert alert-success">Data saved</div>
                    </div>

                {% endif %}

            </div>
        </div>
    </div>
{% endblock %}